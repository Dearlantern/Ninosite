<h1>Заявки на поддержку</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Имя</th>
    <th>Телефон</th>
    <th>Email</th>
    <th>Комментарий</th>
    <th></th>
  </tr>

  <% @queries.each do |query| %>
      <tr>
        <td><%= query.name%></td>
        <td><%= query.phone%></td>
        <td><%= query.email%></td>
        <td><%= query.comment%></td>
        <td><%= link_to 'Удалить', query,class: 'btn btn-danger', method: :delete,confirm: 'Are you sure?' %></td>
      </tr>
  <% end %>
</table>
